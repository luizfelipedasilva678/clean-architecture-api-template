{
  "name": "clean-arch-template",
  "version": "1.0.0",
  "description": "Clean Architecture Template",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "format": "biome format --write ./src/",
    "lint": "biome lint --write ./src/",
    "postinstall": "lefthook install",
    "test": "vitest",
    "build": "rimraf dist && tsc -p tsconfig-build.json"
  },
  "keywords": [
    "clean architecture",
    "template",
    "software design",
    "javascript",
    "nodejs",
    "template repository"
  ],
  "author": {
    "name": "Luiz Felipe",
    "url": "https://github.com/luizfelipedasilva678"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "lefthook": "^1.10.10",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  }
}
